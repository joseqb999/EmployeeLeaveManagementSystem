@model List<EmployeeLeave.ViewModels.EmployeeViewModel>



<section class="ftco-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center mb-5">
                <h2 class="heading-section">Employee List</h2>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="table-wrap">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Employee ID</th>
                                <th>Name</th>
                                <th>Mobile</th>
                                <th>Edit Action</th>
                                <th>Delete Action</th>
                            </tr>
                        </thead>
                        <tbody>


                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.EmpId</td>
                                    <td>@item.EmpName</td>

                                    <td>@item.Mobile</td>


                                    <td>

                                        <a href="/account/changeprofile/@item.EmpId" class="Button"> Edit</a>


                                    </td>

                                    <td>

                                        <a href="/account/deleteemployee/@item.EmpId" class="Button"> Delete</a>

                                    </td>
                                </tr>
}

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
<script type="text/javascript">
    $('#buttonid').click(function () {
        document.location = '@Url.Action("changeprofile","account")';
    });
</script>
